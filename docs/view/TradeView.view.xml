<mvc:View controllerName="tradefast.controller.TradeView" xmlns:ui="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="TradeFast">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Auth Token" />
                <Input value="{AppConfig>/AuthToken}" />
                <Label text="Trading Symbol" />
                <Input value="{AppConfig>/trading_symbol}" />
                <Label text="Quantity" />
                <Input value="{AppConfig>/Quantity}" />
                <Label text="Profit" />
                <Input value="{AppConfig>/profit}" />
                <HBox class="sapUiSmallMargin">
                    <CheckBox class="sapUiSmallMargin" text="Enable" selected="{AppConfig>/EnableTrade}" />
                    <Button class="sapUiSmallMargin" text="Refresh" press="OnRefresh" />
                    <Button class="sapUiSmallMargin" text="Trade" type="Emphasized" enabled="{AppConfig>/EnableTrade}" press="OnTrade" />
                    <Button class="sapUiSmallMargin" text="BUY" type="Success"/>
                    <Button text="SELL" type="Error"/>
                </HBox>

                <ui:Table rows="{TradeStatus>/}" visibleRowCount="7" ariaLabelledBy="Status">
                    <ui:columns>
                        <ui:Column width="7rem">
                            <Label text="Time" />
                            <ui:template>
                                <Text text="{TradeStatus>Time}" />
                            </ui:template>
                        </ui:Column>
                        <ui:Column width="7rem">
                            <Label text="BUY Amount" />
                            <ui:template>
                                <Text text="{TradeStatus>BUY_AMT}" />
                            </ui:template>
                        </ui:Column>
                        <ui:Column width="7rem">
                            <Label text="Sell Amount" />
                            <ui:template>
                                <Text text="{TradeStatus>SELL_AMT}" />
                            </ui:template>
                        </ui:Column>
                    </ui:columns>
                </ui:Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
